---
const {data} = Astro.props;
import "../css/global.css";

---

<article class="itemContainer">
  <section class="imageBox border borderLeftBox">
    <img src={data.aImg} alt="">
  </section>
  <section class="textBox">
    <div class="border borderTopBox"></div>
    <div class="border borderLeftBottomBox">
        <div class="infoBox">
          <div class="linkBox">
            <a href=`/artists/${data.slug}`><h3>{data.aName}</h3><img id="arrow" src="/media/svg/Arrow.svg" alt="arrow"></a>
          </div>
          <p><b>By: </b> <span>{data.cName}</span></p>
          <p><b>Location: </b> <span>{data.aLoc}</span></p>
      </div>
    </div>
  </section>
</article>

<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

a {
  display: flex;
  color: white;
  width: 100%;
}
a:visited, a:active, a:link {
text-decoration: none;
}
a:hover {
  text-decoration: underline;
}
.linkBox {
  display: flex;
  flex-direction: column;
}
  .imageBox img {
    margin: 2rem;
    pointer-events: none;
  }
  .textBox {
    display: grid;
    grid-template-columns: 1.5fr 4fr;
  }
  .infoBox {
    margin: 1rem;
    display: flex;
    flex-direction: column;
  }
.border {
  border: 0.2rem solid transparent;
  border-radius: 1rem;
  height: 100%;
  width: 100%;
  border-image: linear-gradient(to right,#FE373B, #BD4FA4, #8B61F6, #2983D0, #00B7B5) 10;
}
.borderLeftBox {
  height: 100%;
  width: 100%;
  border-right: 10px;
  border-top: 10px;
  border-bottom: 10px;
}
.borderTopBox {
  height: 100%;
  width: 100%;
  border-right: 10px;
  border-left: 10px;
  border-bottom: 10px;
}
.borderLeftBottomBox {
  height: 100%;
  width: 100%;
  border-right: 10px;
  border-top: 10px;
  border-image: linear-gradient(to right,#00B7B5, #2983D0, #8B61F6, #BD4FA4, #FE373B) 10;
}
</style>