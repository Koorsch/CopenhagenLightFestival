<style>
    .hero {
        position: relative;
        width: 100%;
        height: 100vh;
        overflow: hidden;
    }

    video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }

    #date {
        position: absolute;
        bottom: 10px;
        left: 10px;
        padding: 20px;
        z-index: 1; /* Place it above the video */
