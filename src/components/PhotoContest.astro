<article class="itemContainer">
  <h3>Photo Contest</h3>
    <section class="imageBox border borderLeftBox">
        <video autoplay muted>
            <source src="/media/video/PhotoContest.webm" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </section>
    <section class="textBox">
      <div class="border borderTopBox"></div>
      <div class="border borderLeftBottomBox">
          <div class="infoBox">
            <div class="linkBox">
                <a href="#">Participate 2024 <img class="arrow" src="/media/svg/Arrow.svg" alt="arrow"></a>
                <a href="#">Nominees 2024 <img class="arrow" src="/media/svg/Arrow.svg" alt="arrow"></a>
            </div>
        </div>
      </div>
    </section>
  </article>

  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    h3 {
      margin: 4rem 0 1rem 2rem;
      font-size: 1.8vw;
    }
    .itemContainer {
        display: grid;
        grid-template-rows: 0.25fr 1fr 0.15fr;
        grid-template-columns: 1fr;
        width: 80%;
        margin-left: 20%;
    }
  video {
    width: 70%;
    margin: 2rem;
    height: auto;
  }
  a {
    display: flex;
    color: white;
    width: 100%;
  }
  a:visited, a:active, a:link {
  text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
  .linkBox {
    display: flex;
    flex-direction: column;
  }
    .imageBox img {
      margin: 2rem;
      pointer-events: none;
    }
    .textBox {
      display: grid;
      grid-template-columns: 3fr 3fr;
    }
    .infoBox {
      margin: 1rem;
      display: flex;
      flex-direction: column;
    }
  .border {
    border: 0.2rem solid transparent;
    border-radius: 1rem;
    height: 100%;
    width: 100%;
    border-image: linear-gradient(to right,#FE373B, #BD4FA4, #8B61F6, #2983D0, #00B7B5) 10;
  }
  .borderLeftBox {
    height: 100%;
    width: 100%;
    border-right: 10px;
    border-top: 10px;
    border-bottom: 10px;
  }
  .borderTopBox {
    height: 100%;
    width: 100%;
    border-right: 10px;
    border-left: 10px;
    border-bottom: 10px;
  }
  .borderLeftBottomBox {
    height: 100%;
    width: 45%;
    border-right: 10px;
    border-top: 10px;
    border-image: linear-gradient(to right,#00B7B5, #2983D0, #8B61F6, #BD4FA4, #FE373B) 10;
  }

  @media (max-width: 800px) {
    h3 {
      font-size: 5vw;
    }
    .textBox {
      grid-template-columns: 1fr;
      grid-template-rows: auto;

    }
    .infoBox {
      margin: 0;
    }
    .linkBox {
      margin-left: 1rem;
      flex-wrap: wrap;
    }
    .borderTopBox {
      border-top: 0;
    }
    .borderLeftBottomBox {
      border-image: linear-gradient(to right,#FE373B, #BD4FA4, #8B61F6, #2983D0, #00B7B5) 10;
    }

  }
  </style>